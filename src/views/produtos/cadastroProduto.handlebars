{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Novo Produto: </h3>
<div class="card">
    <div class="card-body">
        <form class="form-group" action="/cadastrarproduto/salvar" method="post">
            <input type="hidden" name="lojaid" value="{{lojaid}}">
            <div class="input-group">
                <label for="codigo">Código: </label>
                <input type="text" name="codigo" class="form-control ml-2 col-lg-3">

                <label for="classificacao" class="ml-4">Classificação: </label>
                <input type="text" name="classificacao" class="form-control ml-2">
            </div>
            <div class="input-group mt-4">
                <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control ml-2">

                <label for="quantidade" class="ml-4">Quantidade: </label>
                <input type="number" name="quantidade" class="form-control ml-2 col-lg-2">

                <label for="valor" class="ml-4">Valor: </label>
                <input type="text" name="valor" class="form-control ml-2 col-lg-2">
            </div>
            <div class=" mt-4 col text-center">
                <button type="submit" name="buttonPreencher" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>
