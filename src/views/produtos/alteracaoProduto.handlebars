<h3>Alterar Produto: </h3>
<div class="card">
    <div class="card-body">
        <form class="" action="/alterarproduto/salvar/{{produto.id}}" method="post">
            <input type="hidden" name="lojaid" value="{{produto.lojaId}}">
            <div class="input-group">
                <label for="codigo">Código: </label>
                <input type="text" name="codigo" class="form-control ml-2 col-lg-3" value="{{produto.codigo}}">

                <label for="classificacao" class="ml-4">Classificação: </label>
                <input type="text" name="classificacao" class="form-control ml-2" value="{{produto.classificacao}}">
            </div>
            <div class="input-group mt-4">
                <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control ml-2" value="{{produto.nome}}"> 

                <label for="quantidade" class="ml-4">Quantidade: </label>
                <input type="number" name="quantidade" class="form-control ml-2 col-lg-2" value="{{produto.quantidade}}">

                <label for="valor" class="ml-4">Valor: </label>
                <input type="text" name="valor" class="form-control ml-2 col-lg-2" value="{{produto.valor}}">
            </div>
            <div class=" mt-4 col text-center">
            <br><button type="submit" name="buttonAlterar" class="btn btn-primary">Alterar</button>
        </form>
    </div>
</div>
