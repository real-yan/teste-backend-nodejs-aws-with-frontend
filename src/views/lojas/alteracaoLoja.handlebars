<h3>Alterar Loja: </h3>
<div class="card">
    <div class="card-body">
        <form class="" action="/alterarloja/salvar/{{loja.id}}" method="post">
            <div class="input-group">
                <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control ml-2" value="{{loja.nome}}">

                <label for="cnpj" class="ml-4">CNPJ: </label>
                <input type="text" name="cnpj" class="form-control ml-2 col-lg-4" value="{{loja.cnpj}}">
            </div>
            <div class="input-group mt-4">
                <label for="rua">Rua: </label>
                <input type="text" name="rua" class="form-control ml-4" value="{{loja.rua}}">

                <label for="numero" class="ml-4">NÃºmero: </label>
                <input type="text" name="numero" class="form-control ml-2 col-lg-1" value="{{loja.numero}}"> 

                <label for="complemento" class="ml-4">Complemento: </label>
                <input type="text" name="complemento" class="form-control ml-2 col-lg-4" value="{{loja.complemento}}">
            </div>
            <div class="input-group mt-4">
                <label for="bairro">Bairro: </label>
                <input type="text" name="bairro" class="form-control ml-2" value="{{loja.bairro}}">

                <label for="cidade" class="ml-4">Cidade: </label>
                <input type="text" name="cidade" class="form-control ml-2" value="{{loja.cidade}}">

                <label for="uf" class="ml-4">UF: </label>
                <input type="text" name="uf" class="form-control ml-2 col-lg-1" value="{{loja.uf}}">
            </div>
            <div class="input-group mt-4">
                <label for="responsavel">Responsavel: </label>
                <input type="text" name="responsavel" class="form-control ml-2" value="{{loja.responsavel}}">

                <label for="telefone" class="ml-4">Telefone: </label>
                <input type="text" name="telefone" class="form-control ml-2" value="{{loja.telefone}}">

                <label for="email" class="ml-4">E-mail: </label>
                <input type="text" name="email" class="form-control ml-2" value="{{loja.email}}">
            </div>
            <div class=" mt-4 col text-center">
            <br><button type="submit" name="buttonAlterar" class="btn btn-primary">Alterar</button>
        </form>
    </div>
</div>
